<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Bookings</title>
    <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
</head>
<body>
    <div class="container">
        <h1>Manage Bookings</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.user.name }}</td>
                    <td>{{ booking.date }}</td>
                    <td>{{ booking.status }}</td>
                    <td>
                        <a href="{{ path('admin.booking.confirm', { id: booking.id }) }}">Confirm</a>
                        <a href="{{ path('admin.booking.cancel', { id: booking.id }) }}">Cancel</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">No bookings found.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>